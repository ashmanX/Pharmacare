<% include inc/view_header %>
    <% include inc/view_topmenu %>
        <% include inc/view_sidebar %>


            <div id="page-wrapper">

                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-12">
                            <h1 class="page-header text-center">
                                Add Manufacturer
                            </h1>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-5 col-lg-offset-3">

                            <form action="" method="POST" id="myForm">
                                <div class="form-group">
                                    <label for="med_name">Manufacturer Name</label>
                                    <input type="text" class="form-control" id="manufacturer_name" name="manufacturer_name" placeholder="Manufacturer Name">
                                </div>
                                <input type="submit" class="btn btn-primary" name="submit" value="Create">
                            </form>

                            <br><br>
                            <% if (message) { %>
                                <div class="alert <%= message_type %>">
                                    <strong><%= message %></strong>
                                </div>
                                <% } %>
                                    <% if (errors) { %>
                                        <ul style="padding-left: 0">
                                            <% errors.forEach(function(err){ %>
                                                <li style="list-style: none;">
                                                    <div class="alert alert-danger">
                                                        <strong><%= err.msg %></strong>
                                                    </div>
                                                </li>
                                                <% }) %>
                                        </ul>
                                        <% } %>


                        </div>
                    </div>
                    <br />
                    <br />
                    <div class="container" style="float: left; font-size:17px;">
                        <a href="/admin/manufacturer">Back to List </a>
                    </div>
                    <br>
                    <hr>

                </div>

            </div>

            <% include inc/view_footer.ejs %>