<% include inc/view_header %>
    <% include inc/view_topmenu %>
        <% include inc/view_sidebar %>
            <div id="page-wrapper">

                <div class="container-fluid">

                    <div class="row">
                        <div class="col-lg-12">
                            <h1 class="page-header text-center">
                                Suppliers
                            </h1>
                        </div>
                    </div>
                    <div class="container" style="float: left; font-size:17px;">
                        <a href="/admin/supplier/create" class="btn btn-primary btn-lg"
                            style="background-color: rgb(19, 146, 155);">Add New Supplier</a>
                    </div>

                    <div class="row">
                        <div class="col-lg-5 col-lg-offset-3">


                        </div>
                    </div>
                    <br>
                    <hr>
                    <div class="row">
                        <div class="col-lg-12">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Supplier Name</th>
                                        <th>Contact</th>
                                        <th>Email</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% supplier.forEach(function(item){ %>
                                        <tr>
                                            <td>
                                                <%= item.Supplier_Name %>
                                            </td>
                                            <td>
                                                <%= item.Contact %>
                                            </td>
                                            <td>
                                                <%= item.Email %>
                                            </td>
                                            <td><a href="/admin/supplier/edit/<%= item.ID %>">Edit |</a>
                                                <a href="/admin/supplier/delid=<%= item.ID %>"
                                                    onclick="return confirm('Are You Sure to Delete?')">Delete</a>
                                            </td>
                                        </tr>
                                        <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>

            </div>


            <% include inc/view_footer.ejs %>