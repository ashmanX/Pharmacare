<% include inc/view_header %>
    <% include inc/view_topmenu %>
        <% include inc/view_sidebar %>
            <div id="page-wrapper" style="font-family: Product Sans;">

                <div class="container-fluid">

                    <div class="row">
                        <div class="col-lg-12">
                            <h1 class="page-header text-center">
                                List of Batches
                            </h1>
                        </div>
                    </div>
                    <div class="container" style="float: left; font-size:17px;">
                        <a href="/admin/batch/create" class="btn btn-primary btn-lg"
                            style="background-color: rgb(19, 146, 155);">Add New Batch</a>
                    </div>

                    <div class="row">
                        <div class="col-lg-5 col-lg-offset-3">

                        </div>
                    </div>
                    <br>
                    <hr>
                    <div class="row">
                        <div class="col-lg-12">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Batch ID</th>
                                        <th>Medicine Name</th>
                                        <th>Quantity</th>
                                        <th>Cost Price</th>
                                        <th>Sell Price</th>
                                        <th>Production Date</th>
                                        <th>Expire Date</th>
                                        <th>Supplier Name</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% batch.forEach(function(item){ %>
                                        <tr>
                                            <td>
                                                <%= item.Batch_ID %>
                                            </td>
                                            <td>
                                                <%= item.Medicine_Name %>
                                            </td>
                                            <td>
                                                <%= item.Quantity %>
                                            </td>
                                            <td>
                                                <%= item.Cost_Price %>
                                            </td>
                                            <td>
                                                <%= item.Sell_Price %>
                                            </td>
                                            <td>
                                                <%= item.Production_Date %>
                                            </td>
                                            <td>
                                                <%= item.Expire_Date %>
                                            </td>
                                            <td>
                                                <%= item.Supplier_Name %>
                                            </td>
                                            <td><a href="/admin/batch/edit/<%= item.id %>">Edit |</a>
                                                <br>
                                                <a href="/admin/batch/delid=<%= item.id %>"
                                                    onclick="return confirm('Are You Sure to Delete?')">Delete</a>
                                            </td>
                                        </tr>
                                        <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>

            </div>



            <% include inc/view_footer.ejs %>